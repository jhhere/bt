<%= provide(:title, 'Sign up') %>
<h1 class="title">Sign up</h1>

<%= form_for(@user, html: { class: "form-horizontal", role: "form" } ) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-3 control-label input-lg" %>
    <div class="col-sm-6">
      <%= f.text_field :email, class: "form-control input-lg", placeholder: "Click here to enter your email" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password, class: "col-sm-3 control-label input-lg"%>
    <div class="col-sm-6">
      <%= f.password_field :password, class: "form-control input-lg", placeholder: "Click here to enter your password" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :password_confirmation, "Confirm Password", class: "col-sm-3 control-label input-lg" %>
    <div class="col-sm-6">
    <%= f.password_field :password_confirmation, class: "form-control input-lg",placeholder: "Enter the same password here" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-4">
    <%= f.submit "Create my account", class: "btn btn-lg btn-success" %>
    </div>
  </div>
<% end %>

